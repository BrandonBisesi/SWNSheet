<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SWNSheet.Views.ItemsViews.AllItemsView"
             xmlns:viewmodel="clr-namespace:SWNSheet.ViewModels.ItemsViewModels"
             x:DataType="viewmodel:AllItemsViewModel"
             Title="AllItemsView">

    <VerticalStackLayout Padding="10">
        <Button Text="Weapons"
                Command="{Binding WeaponsCommand}"/>
        <Button Text="Armour"
                Command="{Binding ArmourCommand}"/>
        <Button Text="More Items"
                Command="{Binding MoreItemsCommand}"/>
    </VerticalStackLayout>
    
</ContentPage>